<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>

        <TargetFramework>net9.0</TargetFramework>
        <OutputType>Exe</OutputType>

        <LangVersion>13.0</LangVersion>
        <Nullable>enable</Nullable>
        <TreatWarningsAsErrors>true</TreatWarningsAsErrors>
        <ImplicitUsings>enable</ImplicitUsings>

        <IsTestAssetProject>true</IsTestAssetProject>
        <ServerGarbageCollection>true</ServerGarbageCollection>
        <TieredPGO>true</TieredPGO>

        <IsPackable>false</IsPackable>
        
    </PropertyGroup>

    <ItemGroup>
        <RuntimeHostConfigurationOption Include="System.GC.DynamicAdaptationMode" Value="0" />
        <RuntimeHostConfigurationOption Include="System.Runtime.ReadyToRun" Value="0" />
        <RuntimeHostConfigurationOption Include="System.Threading.ThreadPool.HillClimbing.Disable" Value="1" />
    </ItemGroup>
    
    <ItemGroup>
        <ProjectReference Include="..\Adapter\GenHTTP.Adapters.WiredIO.csproj"/>
        <PackageReference Include="GenHTTP.Modules.Functional" Version="9.8.*" />
        <PackageReference Include="GenHTTP.Modules.DirectoryBrowsing" Version="9.8.*" />
        <PackageReference Include="GenHTTP.Modules.OpenApi" Version="9.8.*" />
        <PackageReference Include="GenHTTP.Modules.ApiBrowsing" Version="9.8.*" />
    </ItemGroup>

</Project>
